<script th:src="@{/lib/jquery/jquery.js}"></script>
<script th:src="@{/lib/lui/layui.all.js}"></script>

<script type="text/javascript">
layui.laydate.render({
        elem: '#startTime'
        ,type: 'date'
    });
    
     
    
    var lessonId = getUrlParam("id");
    
    var table = layui.table;
    var layer = layui.layer;

    var iframeWin = null;
    
   function getUrlParam(name) {  
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");  
            var r = window.location.search.substr(1).match(reg);  
            if (r != null) return unescape(r[2]); return null;  
        }  

    function openWin(title,isShow,id,url){
    
	    if (typeof(url) == "undefined") {
	    	url = 'ops/schoolLesson/edit';
	    }
        if(!!id){
            url += "?id="+id;
            if(isShow){
                url += "&flag=2";
            }else{
                url += "&flag=1";
            }
        }else{
            url += "?flag=0";
        }
        var option = {
            type: 2,
            title:[title,"color:green"],
            success: function(layero, index){
                iframeWin = parent.window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
            },
            content: url,
            area:['800px','600px']
        };
        var btn = ['保存','关闭'];
        var okFun = function(){
            parent.layer.close(index);
        } ;
        if(isShow){
            btn = ['关闭']
        }
        if(btn.length > 1){
            okFun = function(){
                if(iframeWin != null){
                    iframeWin.doSave(function(){
                        parent.layer.close(index);
                        // 刷新table数据
                        table.reload("schoolStudentTable");
                    });
                }
            };
            option['btn2'] = function(){parent.layer.close(index);}
        }
        option['btn'] = btn;
        option['yes'] = okFun ;
        var index = parent.layer.open(option);
    }
    
     function openWin(title,isShow,id,url){
	    if (typeof(url) == "undefined") {
	    	url = 'ops/schoolLesson/edit';
	    }
        //var url = 'ops/schoolLesson/edit';
        if(!!id){
            url += "?id="+id;
            if(isShow){
                url += "&flag=2";
            }else{
                url += "&flag=1";
            }
        }else{
            url += "?flag=0";
        }
        var option = {
            type: 2,
            title:[title,"color:green"],
            success: function(layero, index){
                iframeWin = parent.window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
            },
            content: url,
            area:['800px','600px']
        };
        var btn = ['保存','关闭'];
        var okFun = function(){
            parent.layer.close(index);
        } ;
        if(isShow){
            btn = ['关闭']
        }
        if(btn.length > 1){
            okFun = function(){
                if(iframeWin != null){
                    iframeWin.doSave(function(){
                        parent.layer.close(index);
                        // 刷新table数据
                        table.reload("schoolTable");
                    });
                }
            };
            option['btn2'] = function(){parent.layer.close(index);}
        }
        option['btn'] = btn;
        option['yes'] = okFun ;
        var index = parent.layer.open(option);
    }

    function add(){
        openWin("新增",false);
    }
    //table点击事件
    table.on("tool(courseTable)",function(obj){
        var data = obj.data;
        if(obj.event === 'detail'){
            openWin("详细",true,data.id);
        } else if(obj.event === 'del'){
            parent.layer.confirm('确定删除？', function(index){
                parent.layer.close(index);
                $.ajax("del?id="+data.id,{
                    method:"delete",
                   contentType:"application/json;charset=utf-8",
                   success:function(data){
                        if(data){
                            parent.tips(1, "删除成功！");
                            table.reload("schoolTable");

                        }else{
                            parent.tips(0, "删除失败！");
                        }
                   },
                    error:function(e){
                        parent.tips(0, "删除失败！");
                    }
                });

            });
        } else if(obj.event === 'edit'){
            openWin("编辑",false,data.id);
        } else if(obj.event === 'approve'){
            $.ajax("approve?id="+data.id,{
                method:"get",
                contentType:"application/json;charset=utf-8",
                success:function(data){
                     if(data){
                         parent.tips(1, "通过成功！");
                         table.reload("schoolStudentTable");

                     }else{
                         parent.tips(0, "通过失败！");
                     }
                },
                 error:function(e){
                     parent.tips(0, "通过失败！");
                 }
             });

       } else if(obj.event === 'deny'){
    	   openDenyWin("拒绝", false, data.id);
       }  else if(obj.event === 'preEntryDetail'){
       	if (data.isPreEntry == 0) {
       	 	parent.tips(0, "未录入信息！");
       	} else {
       		 openWin("录入明细",true,data.preEntryStudent.id, 'ops/schoolStudent/preEntryDetail');
       	}
       } 
       
       
    });
    
    function openDenyWin(title, isShow, id){
        var url = 'ops/schoolStudent/toDeny?id=' + id;
        var option = {
            type: 2,
            title:[title,"color:green"],
            success: function(layero, index){
                iframeWin = parent.window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
            },
            content: url,
            area:['500px','200px']
        };
        var btn = ['保存','关闭'];
        var okFun = function(){
            parent.layer.close(index);
        } ;
        if(isShow){
            btn = ['关闭']
        }
        if(btn.length > 1){
            okFun = function(){
                if(iframeWin != null){
                    iframeWin.doSave(function(){
                        parent.layer.close(index);
                        // 刷新table数据
                        table.reload("schoolStudentTable");
                    });
                }
            };
            option['btn2'] = function(){parent.layer.close(index);}
        }
        option['btn'] = btn;
        option['yes'] = okFun ;
        var index = parent.layer.open(option);
    }
    
    function filter(){
        var licence = $("#licence").val();
        var className = $("#className").val();
        var classNo = $("#classNo").val();
        var userName = $("#userName").val();
        var telNo = $("#telNo").val();
        var startTime = $("#startTime").val();
        var payType = $("#payType").val();
        var isPreEntry = $("#isPreEntry").val();
         table.reload("schoolStudentTable",{
             where:{licence:licence,classNo:classNo,className:className,userName:userName,telNo:telNo,startTime:startTime,payType:payType,isPreEntry:isPreEntry}
         })
        
    }
</script>
<script id="dateTpl" type="text/html">
    {{# var date = layui.util.toDateString(d.startTime, 'yyyy-MM-dd') }}
    <span>{{date}}</span>
</script>

