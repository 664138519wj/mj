		<div class="plat-title" style="padding-top:40px;">
			<h2>预约考试</h2> 
		</div>
		<div class="com-width">
			<div class="school-box xc-platform com-width" style="background:#fff;padding:20px;min-height:500px;">
			<ul class="choose-ul clear" style="padding:0;">
                    <li class="xc-select320 fl">
                        <span style="display:inline-block;">区域</span>
                        <div class="xc-info-box xc-w210">
                            <select name="areaId" id="areaId" >
                                <option value="">全部</option>
                                <option th:each="area:${areaList}" th:value="${area.id}" th:selected="${areaId == area.id}"><span th:text="${area.city}"></span></option>
                            </select>
                        </div>
                    </li>
                    <li class="xc-select430 fl">
                        <span style="display:inline-block;">驾照类型</span>
                        <div class="xc-info-box xc-w300">
                            <select name="licence" id="licence" class="">
                                <option value="">全部</option>
                                <option th:each="lData:${licenceList}" th:value="${lData.code}" th:selected="${licence == lData.code}"><span th:text="${lData.name}"></span></option>
                            </select>
                        </div>
                    </li>
                   
                    <li class="xc-select320 fl">
                        <span style="display:inline-block;">科目</span>
                        <div class="xc-info-box xc-w210">
                            <select name="kemu" id="kemu" class="">
                                <option value="">全部</option>                            
                                <option value="1" th:selected="${kemu == 1}">科目一</option>
                                <option value="2" th:selected="${kemu == 2}">科目二</option>
                                <option value="3" th:selected="${kemu == 3}">科目三</option>
                                <option value="4" th:selected="${kemu == 4}">科目四</option>
                            </select>
                        </div>
                    </li>
                     <li class="xc-select430 fl">
                        <span style="display:inline-block;">考场名称</span>
                        <div class="xc-info-box xc-w330">
                            <select name="examPlaceId" id="examPlaceId" class="">
                                <option value="">全部</option>
                                <option th:each="exam:${examPlaceList}" th:value="${exam.id}" th:selected="${examPlaceId==exam.id}"><span th:text="${exam.name}"></span></option>
                            </select>
                        </div>
                    </li>
                    <li class="xc-select430 fl">
                        <span style="display:inline-block;">地址</span>
                        <div class="xc-info-box xc-w300">
                            <input type="text" name="address" id="address" placeholder="输入地址" th:value="${address}">  
                        </div>
                    </li>
                    <li class="xc-found-btn fl">
                        <button type="button" id="query_appoint_button">查询</button>
                    </li>
                </ul>
				<!-- <ul class="choose-ul clear">
						<li class="fl" style="margin:0 200px 0 20px;"><span>选择科目</span>
